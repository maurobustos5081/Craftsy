<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head',{ title : 'LOGIN' }) %>

  <body class="login">
    <%- include('partials/header') %>

    <main class="container mt-5">
      <div class="row">
        <div class="col-12 col-md-10 col-lg-6 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <h3>Iniciá sesión</h3>
              <hr />
              <form class="row" method="POST">
                <div class="col-12 mb-3">
                  <label class="form-label" for="email">Email</label>
                  <input
                    class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>"
                    type="email"
                    id="email"
                    name="email"
                  />
                  <small class="text-danger ms-2"><%= locals.errors && (errors.email && errors.email.msg) %></small>
                </div>
                <div class="col-12 mb-3">
                  <label class="form-label" for="password">Contraseña</label>
                  <input
                    class="form-control"
                    type="password"
                    id="password"
                    name="password"
                  />
                  <a class="text-dark small" href="">Olvidé mi contraseña</a>

                </div>
                <div class="col-12 mb-3">
                    <small class="text-danger ms-2"><%= locals.errors && (errors.password && errors.password.msg) %></small>

                </div>

                <div class="d-flex justify-content-around">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="remember"
                      name="remember"
                    />
                    <label class="form-check-label" for="remember">
                      Recordame
                    </label>
                  </div>
                  <button class="buttons__primary" type="submit">
                    Ingresá
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
